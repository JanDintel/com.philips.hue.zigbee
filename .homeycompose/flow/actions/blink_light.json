{
    "id": "Blink",
    "title": {
      "en": "Blink the light",
      "sv": "Blinka ljuset",
      "nl": "Knipper de lamp",
      "de": "Blink das Licht"
    },
    "titleFormatted": {
      "en": "Do [[blinks]] times [[blink_type]] [[device]]",
      "nl": "Doe [[blinks]] keer [[blink_type]] [[device]]"
    },
    "args": [
        {
          "type": "device",
          "name": "device",
          "filter": "class=light"
        },
        {
          "type": "dropdown",
          "name": "blink_type",
          "title": {
            "en": "Long or short blink",
            "sv": "Lång eller kort blinkning",
            "nl": "Lang of kort knipperen",
            "de": "Langes oder kurzes Blinken"
          },
          "values": [
            {
              "id": "long",
              "label": {
                "en": "Long blink",
                "sv": "Lång blinkning",
                "nl": "Lang knipperen",
                "de": "Langes Blinken"
              }
            },
            {
              "id": "short",
              "label": {
                "en": "Short blink",
                "sv": "Kort blinkning",
                "nl": "Kort knipperen",
                "de": "Kurzes Blinken"
              }
            }
          ]
        },
        {
          "type": "number",
          "name": "blinks",
          "title": {
            "en": "Blinks",
            "sv": "Blinkningar",
            "nl": "Knippert",
            "de": "Blinkt"
          },
          "min": 1,
          "max": 25,
          "step": 1,
          "placeholder": {
            "en": "Number of blinks",
            "sv": "Antal blinkningar",
            "nl": "Aantal keer knipperen",
            "de": "Anzahl der Blinkzeichen"
          }
        }
      ]
}
